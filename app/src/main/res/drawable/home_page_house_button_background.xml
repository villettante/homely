<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/container_selected" />
            <stroke android:width="1.5dp" android:color="@color/text_color_tertiary" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/container_selected_highlight" />
            <stroke android:width="2dp" android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>